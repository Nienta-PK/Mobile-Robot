# .gitattributes with LF
cat > .gitattributes <<'EOF'
* text=auto eol=lf
*.png binary
*.jpg binary
*.pdf binary
EOF

# .gitignore with LF
cat > .gitignore <<'EOF'
# ROS 2/colcon
build/
install/
log/
**/build/
**/install/
**/log/

# Editors & OS
.vscode/
.idea/
*.swp
.DS_Store
Thumbs.db

# Python
__pycache__/
*.pyc
*.pyo

# C/C++
*.o
*.obj
*.pdb
EOF
